<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayoutHomePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivAddHomePageFragment"
            android:layout_width="213dp"
            android:layout_height="224dp"
            android:layout_marginStart="53dp"
            android:layout_marginBottom="35dp"
            android:src="@drawable/give"
            app:layout_constraintBottom_toTopOf="@+id/ivTakeHomePageFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivTakeHomePageFragment"
            android:layout_width="204dp"
            android:layout_height="180dp"
            android:layout_marginTop="363dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/take"
            app:layout_constraintBottom_toTopOf="@+id/ivProfileHomePage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAddPicHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="@+id/ivAddHomePageFragment"
            app:layout_constraintEnd_toEndOf="@+id/ivAddHomePageFragment"
            app:layout_constraintStart_toStartOf="@+id/ivAddHomePageFragment" />

        <ImageView
            android:id="@+id/ivProfileHomePage"
            android:layout_width="53dp"
            android:layout_height="75dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/profile_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTakeHomePageFragment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>